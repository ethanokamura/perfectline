---
interface Props {
	description: string;
	subdescription: string;
}
const { description, subdescription } = Astro.props;
---
<header class="w-full pb-10">
  <h1 class="md:text-6xl text-3xl">PerfectLine</h1>
  <h2 class="text-primary dark:text-darkprimary uppercase">{description}</h2>
  { subdescription == "" ? <></> : <h3 class="text-text2 dark:text-darktext2">{subdescription}</h3> }
</header>